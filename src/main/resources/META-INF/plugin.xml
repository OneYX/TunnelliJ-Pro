<idea-plugin>
    <id>TunnelliJ-Pro</id>
    <name>TunnelliJ-Pro</name>
    <vendor email="pingdongyi@gmail.com" url="http://oneyx.github.io">None</vendor>

    <description><![CDATA[
        TunnelliJ-Pro plugin works as a TCP tunnel and it useful for any network development.
		It allows you to monitor, sniff TCP connections and display the content in a very
		effective way inside your IDE.
    ]]></description>

    <version>$TUNNELLIJ_VERSION$</version>
    
    <idea-version since-build="3000"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <category>network</category>

    <project-components>
        <component>
            <implementation-class>net.boruvka.idea.tunnellij.TunnelPlugin</implementation-class>
        </component>
    </project-components>
</idea-plugin>